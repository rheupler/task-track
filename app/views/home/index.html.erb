<div class="container">

	<%= link_to 'Add new project', new_project_path %>
	<% if user_signed_in? %>

		<% if @projects.any? %>
			<% @projects.each do |project| %>
						<h3><%= project.title %></h3>
						<p><%= project.description %></p>
						<%= link_to 'Show', project_path(project.id) %>
				<% end %>
			<% else %>
				<h3>You have no projects :(</h3>
		<% end %>

	<% else %>
	  <h1>Sign in to start tracking your projects</h1>
	<% end %>

</div>
